          ]
        },
        {
          "name": "B6 GET /tasks (store taskId of first)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const arr = pm.response.json();",
                  "pm.expect(arr.length).to.be.above(0);",
                  "pm.environment.set('noteId', arr[0].id);"
                ]
