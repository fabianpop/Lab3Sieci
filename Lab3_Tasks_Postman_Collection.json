            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Task-{{ts}}-1 (Highest Prio)\",\n  \"done\": false,\n  \"priority\": 5,\n  \"labels\": [\n    \"lab\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('201',()=>pm.response.to.have.status(201));"
                ]
              }
            }
          ]
        },
        {
          "name": "B2 POST /tasks (create #2: Prio 1, done=false)",
