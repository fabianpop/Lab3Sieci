        },
        {
          "name": "B8 PUT /tasks/{{noteId}} (update status and priority)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated-{{ts}}\",\n  \"done\": true,\n  \"priority\": 3,\n  \"labels\": [\n    \"edit\", \"done\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks/{{noteId}}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));",
                  "pm.test('title updated',()=>pm.expect(pm.response.json().title).to.include('Updated-'));",
                  "pm.test('done is true',()=>pm.expect(pm.response.json().done).to.be.true);"
                ]
              }
            }
          ]
        },
