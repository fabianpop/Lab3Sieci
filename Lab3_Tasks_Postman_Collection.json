{
  "info": {
    "name": "LAB03 – Tasks API (API Key + Pagination)",
    "_postman_id": "lab3-tasks-col",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "A — Security (API Key)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.environment.set('ts', Date.now());"
            ]
          }
        }
      ],
      "item": [
        {
          "name": "A1 GET /tasks bez klucza → 401",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tasks"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('401',()=>pm.response.to.have.status(401));"
                ]
              }
            }
          ]
        },
        {
          "name": "A2 GET /tasks z kluczem → 200 (pusta lista)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));",
                  "pm.test('Array',()=>pm.expect(Array.isArray(pm.response.json())).to.be.true);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "B — CRUD Tasks + Pagination",
      "item": [
        {
